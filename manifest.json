{
    "manifest_version": 3,
    "name": "JDE Tools",
    "version": "1.0",
    "description": "JDE tools - Julian date converter and batch DS list import tools. You can easily convert julian dates and import DS lists of values into JDE.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "contextMenus"
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "src/images/icon16.png",
            "32": "src/images/icon32.png",
            "48": "src/images/icon48.png",
            "128": "src/images/icon128.png"
        }
    },
    "icons": {
        "16": "src/images/icon16.png",
        "32": "src/images/icon32.png",
        "48": "src/images/icon48.png",
        "128": "src/images/icon128.png"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]   
}