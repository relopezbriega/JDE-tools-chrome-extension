{
    "manifest_version": 3,
    "name": "JDE Tools",
    "version": "1.0",
    "description": "Chrome extension for JDE tools - Julian date converter and batch report utilities",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "src/background/background.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "src/images/icon16.png",
            "32": "src/images/icon32.png",
            "48": "src/images/icon48.png",
            "128": "src/images/icon128.png"
        }
    },
    "icons": {
        "16": "src/images/icon16.png",
        "32": "src/images/icon32.png",
        "48": "src/images/icon48.png",
        "128": "src/images/icon128.png"
    }   
}